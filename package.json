{
  "name": "hospital-pharmacy-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm schema:merge && next dev --turbopack",
    "build": "pnpm schema:merge && pnpm db:generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "pnpm db:generate",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "pnpm schema:merge && prisma generate",
    "db:push": "pnpm schema:merge && prisma db push",
    "db:migrate": "pnpm schema:merge && prisma migrate dev",
    "db:migrate:prod": "pnpm schema:merge && prisma migrate deploy",
    "db:studio": "prisma studio",
    "schema:merge": "node scripts/merge-schemas.js",
    "schema:check": "node scripts/merge-schemas.js --check-only",
    "seeds:merge": "node scripts/merge-seeds.js",
    "seeds:check": "node scripts/merge-seeds.js --check-only",
    "db:seed": "pnpm schema:merge && pnpm seeds:merge && pnpm db:seed:run",
    "db:seed:run": "tsx prisma/seed.ts",
    "db:seed:demo": "SEED_DEMO_DATA=true pnpm db:seed",
    "db:seed:prod": "NODE_ENV=production pnpm db:seed",
    "db:setup": "pnpm schema:merge && pnpm db:push && pnpm seeds:merge && pnpm db:seed:run",
    "db:setup:demo": "pnpm schema:merge && pnpm db:push && pnpm seeds:merge && SEED_DEMO_DATA=true pnpm db:seed:run",
    "db:setup:fresh": "pnpm db:setup:demo",
    "db:reset": "pnpm schema:merge && prisma db push --force-reset && pnpm seeds:merge && pnpm db:seed:run",
    "db:reset:demo": "pnpm schema:merge && prisma db push --force-reset && pnpm seeds:merge && SEED_DEMO_DATA=true pnpm db:seed:run",
    "db:full-reset": "pnpm db:reset:demo",
    "db:fresh": "pnpm db:full-reset"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@arcjet/inspect": "1.0.0-beta.9",
    "@arcjet/next": "1.0.0-beta.9",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "6.15.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
